<div class="row">
    <div class="col-sm-6 text-center">
        <img class="img-thumbnail img-rounded img-responsive" src="http://placehold.it/400x400" alt="">
    </div>
    <div class="col-sm-6">
        <h3>{_shop.product.description}</h3>
        <p>{if $product->description}{$product->description}{else}{_shop.product.no_description}{/if}</p>
        <hr>
        <h3>{_shop.currency.price, [price => $template->number($product->price)]}</h3>
    </div>
</div>
<ul class="nav nav-tabs nav-justified">
    <li class="active">
        <a href="#description" data-toggle="tab">
            <span class="glyphicon glyphicon-home"></span>
            <span class="visible-xs">{_shop.product.description}</span>
        </a>
    </li>
    <li>
        <a href="#parameters" data-toggle="tab">{_shop.product.parameters}</a>
    </li>
    <li>
        <a href="#photos" data-toggle="tab">{_shop.product.photos} <span class="badge">4</span></a>
    </li>
    <li>
        <a href="#videos" data-toggle="tab">{_shop.product.videos} <span class="badge">4</span></a>
    </li>
    <li>
        <a href="#reviews" data-toggle="tab">{_shop.product.reviews} <span class="badge">4</span></a>
    </li>
    <li>
        <a href="#comments" data-toggle="tab">{_shop.product.comments} <span class="badge">4</span></a>
    </li>
</ul>

